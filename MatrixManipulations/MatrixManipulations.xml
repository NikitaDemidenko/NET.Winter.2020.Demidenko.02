        <member name="M:MatrixManipulations.MatrixExtension.GetMatrix(System.Int32)">
            <summary>
            Method fills the matrix with natural numbers, starting from 1 in the top-left corner,
            increasing in an inward, clockwise spiral order.
            </summary>
            <param name="size">Matrix order.</param>
            <returns>Filled matrix.</returns>
            <exception cref="T:System.ArgumentException">Throw ArgumentException, if matrix order less or equal zero.</exception>
            <example> N = 3
                1 2 3
                8 9 4
                7 6 5.
            </example>
            <example> N = 4
                1  2  3  4
                12 13 14 5
                11 16 15 6
                10 9  8  7.
            </example>
        </member>
